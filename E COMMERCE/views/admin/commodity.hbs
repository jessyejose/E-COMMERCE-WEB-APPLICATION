<div class="container-fluid">
  <div class="row flex-nowrap" style="background-color: #fde3e9;">
    <div
      class="col-auto col-md-3 col-xl-2 px-sm-2 px-0"
      style="background-color: #e3f2fd;"
    >
      <div
        class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100"
      >
        <ul
          class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
          id="menu"
        >
          <li class="nav-item">
            <a href="/admin/addProduct" class="nav-link align-middle px-0">
              <i class="fs-4 bi-house"></i>
              <span class="ms-1 d-none d-sm-inline"><h5>Category</h5></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/subCategory" class="nav-link align-middle px-0">
              <i class="fs-4 bi-house"></i>
              <span class="ms-1 d-none d-sm-inline"><h5>Sub Category</h5></span>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/commodity" class="nav-link align-middle px-0">
              <i class="fs-4 bi-house"></i>
              <span class="ms-1 d-none d-sm-inline"><h5>Commodity</h5></span>
            </a>
          </li>
        </ul>
        <hr />
      </div>
    </div>
    <div class="col py-3">
      <h1>Add Commodity</h1>
      <form method="post" action="/admin/commodity" enctype="multipart/form-data" >
        <label style="font-size: large;">Category</label>
        <select name="categories" style="width:250px">
          <option>Select</option>
            {{#each categoryInfo}}
            <option placeholder="click here" value="{{this._id}}">{{this.Category}}</option>
            {{/each}}
        </select>
        <br><br>

        <label style="font-size: large;">Sub Category</label>
        <select name="subcategory" style="width:250px">
          <option>Select</option>
            {{#each subcategoryInfo}}
            <option placeholder="click here" value="{{this._id}}">{{this.SubCategory}}</option>
            {{/each}}
        </select>
        <br /><br />

        <label style="font-size:large;">Product</label>&nbsp;<input
          type="text"
          name="prod"
          style="width:250px;"
        /><br /><br />

        <label style="font-size:large;">Quantity</label>&nbsp;<input
          type="text"
          name="quantity"
          style="width:250px;"
        /><br /><br />

        <label style="font-size:large;">Price</label>&nbsp;<input
          type="text"
          name="price"
          style="width:250px;"
        /><br /><br />

        <label style="font-size:large;">Description</label>&nbsp;<input
          type="text"
          name="desc"
          style="width:250px;"
        /><br /><br />

        <label style="font-size: larger;">Image</label>
        <input type="file" name="imag" /><br /><br />

        <input type="submit" value="Submit" style="font-size: large;">
      </form>

      <table style="font-size: medium;width:100%;">

        <tr>
          <th>Category</th>
          <th>Sub Category</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Description</th>
          <th>Image</th>
          <th colspan="2">Action</th>
        </tr>

        {{#each commodityInfo}}
          <tr>
            <td>{{this.category.Category}}</td>
            <td>{{this.subcategory.SubCategory}}</td>
            <td>{{this.Product}}</td>
            <td>{{this.Quantity}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img src="/images/{{this.Imagenew}}" alt="hello" width="100" height="100" /></td>
            <td><a href="/admin/editcommodity/{{this._id}}" type="submit">Edit</a></td>
            <td><a href="/admin/commodity/{{this._id}}" type="submit">Delete</a></td>
          </tr>
        {{/each}}
        
      </table>
        
    </div>
  </div>
</div>